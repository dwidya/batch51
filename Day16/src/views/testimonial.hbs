<html>
    <head>
        <title>Testimonial</title>
        <link rel="stylesheet" href="./css/style.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        <link rel="stylesheet" href="./css/myproject-responsive.css">
        <link rel="stylesheet" href="./css/testimonial.css">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
    </head>
    <body>
        <nav>
            <div class="nav-left">
                <ul>
                    <img src="./img/logo.png" alt="logo" />
                    <li>
                        <a href="/">Home</a>
                    </li>
                    {{#if isLogin}}
                    <li>
                        <a href="/addproject">Add Project</a>
                    {{/if}}
                    </li>
                    <li>
                        <a href="/testimonials" class="selected">Testimonials</a>
                    </li>
                </ul>
                
            </div>

            <div class="nav-right">
                <a href="/contactme">Contact Me</a>
            </div>
            <div class="barsmenu" id="barsmenu" >
                <button class="humberger-button" onclick="openhumberger()">
                  <i class="fa-solid fa-bars fa-xl"></i>
                </button>
            </div>
        </nav>

        <div class="humberger-nav-container" id="humberger-nav-container">
            <a href="./index.html">Home</a>
            <a href="./myproject.html">My Project</a>
            <a href="./contact-me.html">Contact Me</a>
        </div>
        
        <div class="container">
            <div class="rating-container">
                <h2>My Testimonials</h2>
                <h3>Rating by Star</h3>
                <div class="rating">
                    <button class="rating-btn" onclick="testimonial()">
                        All
                    </button>
                    <button class="rating-btn" onclick="filterTestimonial(1)">
                        1
                        <i class="fa-solid fa-star" ></i>
                    </button>
                    <button class="rating-btn" onclick="filterTestimonial(2)">
                        2
                        <i class="fa-solid fa-star" ></i>
                    </button>
                    <button class="rating-btn" onclick="filterTestimonial(3)">
                        3
                        <i class="fa-solid fa-star" ></i>
                    </button>
                    <button class="rating-btn" onclick="filterTestimonial(4)">
                        4
                        <i class="fa-solid fa-star"></i>
                    </button>
                    <button class="rating-btn" onclick="filterTestimonial(5)">
                        5
                        <i class="fa-solid fa-star" ></i>
                    </button>
                </div>
            </div>
            <section class="testimonials" id="testimonials">
                
            </section>
        </div>
        
    </body>
    <script src="./js/burger-button.js"></script>
    <script src="./js/testimonial.js"></script>

</html>